<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_abstract"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/more_actions_background_color">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:padding="15dp"
                android:text="Dong"
                android:textColor="@color/default_text_light_color"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/btn_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:src="@drawable/ic_edit"/>
        </FrameLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/stroke_line_bold_size"
        android:background="@color/default_stroke_line_dark_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/more_fragment_item_height"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_item"
                android:layout_width="@dimen/more_fragment_item_height"
                android:layout_height="@dimen/more_fragment_item_height"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/common_size_10"
                android:layout_toEndOf="@id/icon_item"
                android:gravity="center_vertical"
                android:text="Write history"
                android:textColor="@color/default_text_dark_color"
                android:textSize="16sp"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_write_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:theme="@style/AppTheme.Switch"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/stroke_line_light_size"
            android:layout_marginStart="53dp"
            android:background="@color/default_stroke_line_light_color"/>

        <TextView
            android:id="@+id/btn_change_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/more_fragment_item_height"
            android:background="@drawable/default_raised_button"
            android:drawablePadding="@dimen/common_size_15"
            android:drawableStart="@drawable/ic_shuffle"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/common_size_10"
            android:paddingLeft="@dimen/common_size_15"
            android:paddingRight="@dimen/common_size_15"
            android:paddingTop="@dimen/common_size_10"
            android:text="Change password"
            android:textColor="@color/default_text_dark_color"
            android:textSize="16sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/stroke_line_light_size"
        android:background="@color/default_stroke_line_light_color"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/stroke_line_light_size"
        android:layout_marginTop="@dimen/common_size_20"
        android:background="@color/default_stroke_line_light_color"/>

    <TextView
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/more_fragment_item_height"
        android:background="@drawable/default_raised_button"
        android:drawablePadding="@dimen/common_size_15"
        android:drawableStart="@drawable/ic_logout"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/common_size_10"
        android:paddingLeft="@dimen/common_size_15"
        android:paddingRight="@dimen/common_size_15"
        android:paddingTop="@dimen/common_size_10"
        android:text="@string/logout"
        android:textColor="@color/logout_color"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/stroke_line_normal_size"
        android:background="@color/default_stroke_line_light_color"/>
</LinearLayout>