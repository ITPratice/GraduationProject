<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_vehicle_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/common_size_20"
        android:layout_marginEnd="@dimen/common_size_20"
        android:src="@drawable/ic_vehicle_location"
        app:backgroundTint="#108c10"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_show_road"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/fab_vehicle_location"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/common_size_20"
        android:layout_marginEnd="@dimen/common_size_20"
        android:src="@drawable/ic_route"
        app:backgroundTint="#108c10"/>
</RelativeLayout>