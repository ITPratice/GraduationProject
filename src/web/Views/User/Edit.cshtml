@using VehicleTracker.Models
@model User
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div id="content">
    <header class="clearfix">
        <h2 class="page-title">
            Sửa thông tin thành viên
        </h2>
    </header>
    <div class="content-inner">
        <div class="row">
            <div class="col-md-8">
                @using (Html.BeginForm())
                {
                    @Html.HiddenFor(m => m.PassWord)
                    <div class="edit-row">
                        <h3>Email</h3>
                        <p>Là chữ và số</p>
                        <div class="form-group">
                            <input type="text" id="FullName" name="FullName" class="form-control" title="" disabled value="@Model.Email">
                        </div>
                    </div>
                    <div class="edit-row">
                        <h3>Họ tên</h3>
                        <p>Họ và tên thành viên (là chữ)</p>
                        <div class="form-group">
                            <input type="text" id="FullName" name="FullName" class="form-control" title="" placeholder="Fullname" value="@Model.FullName">
                        </div>
                    </div>
                    <div class="edit-row">
                        <h3>Địa chỉ</h3>
                        <p>Địa chỉ của thành viên (là số và chữ)</p>
                        <div class="form-group">
                            <input type="text" id="Address" name="Address" class="form-control" title="" placeholder="Address" value="@Model.Address">
                        </div>
                    </div>
                    <div class="edit-row">
                        <h3>Số điện thoại</h3>
                        <p>Số điện thoại của thành viên (là số)</p>
                        <div class="form-group">
                            <input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control" title="" placeholder="PhoneNumber" value="@Model.PhoneNumber">
                        </div>
                    </div>
                    <div class="edit-row">
                        <h3>Tên hiển thị</h3>
                        <p>Biệt danh của thành viên (là số hoặc chữ)</p>
                        <div class="form-group">
                            <input type="text" id="UserName" class="form-control" required="required" name="UserName" placeholder="Username" value="@Model.UserName">
                        </div>
                    </div>
                    <div class="edit-row">
                        <h3>Role</h3>
                        <p>1 - Admin, 2 - Waiting, 3 - User, 4 - Staff, 5 - Deleted</p>
                        <div class="form-group">
                            <input type="number" id="Role" name="Role" class="form-control small-input" value="@Model.Role" min="1" max="5" step="1" required="required">
                        </div>
                    </div>
                    <div class="edit-row">
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="Lưu thông tin" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
