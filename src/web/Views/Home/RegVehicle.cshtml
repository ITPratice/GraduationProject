@using System.Net.Http
@using VehicleTracker.ViewModel
@using VehicleTracker.Models
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng kí xe - Vehicle Tracker System</title>
    <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/registration.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-heading">
                Đăng kí thành viên
            </div>
            <div class="panel-body">
                <div class="row wizard">
                    <div class="col-sm-2 nice-tab"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>&nbsp;&nbsp;Home</div>
                    <div class="col-sm-3 nice-tab">Đăng kí thành viên</div>
                    <div class="col-sm-3 nice-tab">Đăng kí xe</div>
                </div>
            </div>
        </div>

        <div class="col-lg-12 well well-content">
            <div class="row">
                @*public string  { get => numberPlate; set => numberPlate = value; }
                public string BranchId { get => branchId; set => branchId = value; }
                public string  { get => hardwareId; set => hardwareId = value; }
                public string  { get => description; set => description = value; }
                public string TypeId { get => typeId; set => typeId = value; }
                public string  { get => userEmail; set => userEmail = value; }
                public int Deleted { get => deleted; set => deleted = value; }
                public int WriteHistory { get => writeHistory; set => writeHistory = value; }*@
                @using (Html.BeginForm())
                {
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>Biển số xe</label>
                            <p>Bao gồm chữ và số, tối đa 20 kí tự</p>
                            <input type="text" placeholder="Enter Vehicle Plate Here.." class="form-control" name="NumberPlate" id="NumberPlate" />
                        </div>

                        <div class="form-group">
                            <label>Hãng xe</label>
                            <p>Lựa chọn hãng xe</p>
                            <div class="row">
                                <div class="col-md-4">
                                    @{
                                        List<SelectListItem> lstItems = new List<SelectListItem>();
                                        using (var client = new HttpClient())
                                        {
                                            IList<Branch> _branchs = await BranchVM.GetAllBranchAsync(client);
                                            foreach (var branch in _branchs)
                                            {
                                                lstItems.Add(new SelectListItem
                                                {
                                                    Text = branch.Name,
                                                    Value = branch.Id
                                                });
                                            }
                                        }
                                        @Html.DropDownList("BranchId", lstItems, new { @class = "form-control" })
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Mã thiết bị</label>
                            <p>Bao gồm chữ và số, tối đa 10 kí tự</p>
                            <input type="text" placeholder="Enter Hardware Id Here.." rows="3" class="form-control" name="HardwareId" id="HardwareId" />
                        </div>

                        <div class="form-group">
                            <label>Mô tả</label>
                            <p>Bao gồm chữ và số, tối đa 200 kí tự</p>
                            <textarea placeholder="Enter Description Here.." rows="3" class="form-control" name="Description" id="Description"></textarea>
                        </div>

                        
                        <div class="form-group">
                            <label>Loại xe</label>
                            <p>Lựa chọn loại xe</p>
                            <div class="row">
                                <div class="col-md-4">
                                    @{
                                        List<SelectListItem> lstItemsType = new List<SelectListItem>();
                                        using (var client = new HttpClient())
                                        {
                                            IList<VehicleType> _types = await VehicleTypeVM.GetAllVehicleTypeAsync(client);
                                            foreach (var type in _types)
                                            {
                                                lstItemsType.Add(new SelectListItem
                                                {
                                                    Text = type.Name,
                                                    Value = type.Id
                                                });
                                            }
                                        }
                                        @Html.DropDownList("TypeId", lstItemsType, new { @class = "form-control" })
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Email người dùng</label>
                            <p>Bao gồm chữ và số, tối đa 80 kí tự</p>
                            <input type="text" placeholder="Enter User Email Here.." class="form-control" name="UserEmail" id="UserEmail" />
                        </div>

                        <input type="button" class="btn btn-lg btn-info col-lg-offset-6 col-lg-2" value="Nhập lại" style="margin-right: 5px;" />
                        <input type="submit" class="btn btn-lg btn-info col-lg-2" value="Đăng kí" id="Submit" />
                    </div>
                }
            </div>
        </div>
</body>
</html>
