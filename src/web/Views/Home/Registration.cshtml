@using VehicleTracker.Models
@model User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng kí - Vehicle Tracker System</title>
    <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/registration.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/jquery/jquery-3.2.1.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#confirm").on("keyup", function () {
                if ($(this).val() != $("#PassWord").val()) {
                    $("#error").html("Không chính xác");
                } else {
                    $("#error").html("");
                }
            });
        });
    </script>
</head>
<body>
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-heading">
                Đăng kí thành viên
            </div>
            <div class="panel-body">
                <div class="row wizard">
                    <div class="col-sm-2 nice-tab"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>&nbsp;&nbsp;Home</div>
                    <div class="col-sm-3 nice-tab">Đăng kí thành viên</div>
                </div>
            </div>
        </div>

        <div class="col-lg-12 well well-content">
            <div class="row">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div>
                        <label>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </label>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>Email</label>
                            <p>Bao gồm chữ và số, tối đa 80 kí tự</p>
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Enter Email Here..", @type = "email" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>Mật khẩu</label>
                            <p>Bao gồm chữ và số, tối đa 20 kí tự</p>
                            @Html.TextBoxFor(model => model.PassWord, new { @class = "form-control", @placeholder = "Enter Password Here..", @type = "password" })
                            @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>Nhập lại mật khẩu</label>
                            <p>Giống với mật khẩu đã nhập</p>
                            <input type="password" id="confirm" class="form-control" placeholder="Enter Confirm Password Here.." />
                            <span class="field-validation-valid text-danger" id="error"></span>
                        </div>

                        <div class="form-group">
                            <label>Họ và tên</label>
                            <p>Bao gồm chữ, tối đa 100 kí tự</p>
                            @Html.TextBoxFor(model => model.FullName, new { @class = "form-control", @placeholder = "Enter Full Name Here..", @type = "text" })
                            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>Tên hiển thị</label>
                            <p>Bao gồm chữ và số, tối đa 20 kí tự</p>
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Enter Username Here..", @type = "text" })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>Địa chỉ</label>
                            <p>Bao gồm chữ và số, tối đa 100 kí tự</p>
                            @Html.TextAreaFor(model => model.Address, new { @class = "form-control", @row = "3", @placeholder = "Enter Address Here.." })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>Số điện thoại</label>
                            <p>Bao gồm số, tối đa 20 kí tự</p>
                            @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", @placeholder = "Enter Phone Number Here..", @type = "text" })
                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                        </div>

                        <input type="button" class="btn btn-lg btn-info col-lg-offset-6 col-lg-2" value="Nhập lại" style="margin-right: 5px;" />
                        <input type="submit" class="btn btn-lg btn-info col-lg-2" value="Đăng kí" id="Submit" />
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
