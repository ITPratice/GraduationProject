@using Microsoft.AspNetCore.Http
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin</title>
    <link href="https://fonts.googleapis.com/css?family=Arimo" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/admin/css/index.css" rel="stylesheet" />
    <link href="~/admin/css/edit.css" rel="stylesheet" />
    <link href="~/admin/css/default.css" rel="stylesheet" />
</head>

<body>
    <div class="container-fluid display-table">
        <div class="row display-table-row">
            <!-- Side Menu-->
            <div class="col-md-2 col-sm-1 hidden-xs display-table-cell valign-top" id="side-menu">
                <h1 class="hidden-xs hidden-sm">Admin Panel</h1>
                <ul>
                    <li class="link active">
                        <a href="#">
                            <span class="glyphicon glyphicon-th" aria-hidden="true"></span>
                            <span class="hidden-xs hidden-sm font-16">Trang chủ</span>
                        </a>
                    </li>
                    <li class="link">
                        <a href="#collapse-post-user" data-toggle="collapse" aria-controls="collapse-post">
                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                            <span class="hidden-xs hidden-sm font-16">Thành viên</span>
                        </a>
                        <ul class="collapse collapseable" id="collapse-post-user">
                            <li>
                                <a href="@Url.Action("Index", "User")">Thành viên</a>
                            </li>
                            <li><a href="#">Thêm mới</a></li>
                            <li><a href="@Url.Action("Active", "User")">Kích hoạt</a></li>
                        </ul>
                    </li>
                    <li class="link">
                        <a href="#collapse-post-branch" data-toggle="collapse" aria-controls="collapse-post">
                            <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                            <span class="hidden-xs hidden-sm font-16">Hãng xe</span>
                        </a>
                        <ul class="collapse collapseable" id="collapse-post-branch">
                            <li><a href="@Url.Action("Index", "Branch")">Hãng xe</a></li>
                            <li><a href="@Url.Action("Insert", "Branch")">Thêm mới</a></li>
                        </ul>
                    </li>
                    <li class="link">
                        <a href="#collapse-post-vehicle" data-toggle="collapse" aria-controls="collapse-post-branch">
                            <span class="glyphicon glyphicon glyphicon-plane" aria-hidden="true"></span>
                            <span class="hidden-xs hidden-sm font-16">Xe đăng kí</span>
                        </a>
                        <ul class="collapse collapseable" id="collapse-post-vehicle">
                            <li><a href="@Url.Action("Index", "Vehicle")">Xe đăng kí</a></li>
                            <li><a href="#">Thêm mới</a></li>
                        </ul>
                    </li>
                    <li class="link">
                        <a href="#collapse-post-type" data-toggle="collapse" aria-controls="collapse-post">
                            <span class="glyphicon glyphicon glyphicon-tasks" aria-hidden="true"></span>
                            <span class="hidden-xs hidden-sm font-16">Loại xe</span>
                        </a>
                        <ul class="collapse collapseable" id="collapse-post-type">
                            <li><a href="@Url.Action("Index", "VehicleType")">Loại xe</a></li>
                            <li><a href="@Url.Action("Insert", "VehicleType")">Thêm mới</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <!-- Main content area-->
            <div class="col-md-10 col-sm-11 display-table-cell valign-top">
                <div class="row">
                    <header id="nav-header" class="clearfix">
                        <!-- Search bar-->
                        <div class="col-md-5">
                            <nav class="navbar-default pull-left">
                                <button type="button" class="navbar-toggle collapsed" data-toggle="offcanvas" data-target="#side-menu"
                                        aria-expanded="false">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </nav>
                            <input type="text" id="header-search-field" class="hidden-sm hidden-xs" placeholder="Search for somethings...">
                        </div>
                        <div class="col-md-7">
                            <ul class="pull-right">
                                <li id="welcome" class="hidden-xs">
                                    <span>Xin chào</span>, <b>@Context.Session.GetString("Admin")</b>
                                </li>

                                <li>
                                    <a href="#" class="logout">
                                        <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Đăng xuất
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </header>
                </div>
                @RenderBody()
                <div class="row">
                    <footer id="admin-footer" class="clearfix">
                        <div class="pull-left"><b>Copyright </b>&copy; 2017</div>
                        <div class="pull-right"><b>Admin system</b></div>
                    </footer>
                </div>
            </div>
        </div>
    </div>

    <!-- Javascript-->
    <script src="~/lib/bootstrap/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/js/default.js"></script>
</body>

</html>